<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
    <%- include('./partials/nav.ejs') %>
    <h1>Films Not Returned</h1>
        <% let storeLocation = ''; %>
        <% if (films.length > 0)%> <% films.forEach(film => { %>
            <% if(storeLocation !== film.store_address) {%>
                <% if(storeLocation !== null) %> </table>
                <% storeLocation = film.store_address; %>
                <h2 class="margin-top">Store Location: <%= storeLocation %></h2>
                <table class="pure-table pure-table-horizontal center">
                    <thead>
                      <th>Film Title</th>
                      <th>Date Rented</th>
                      <th>Customer Name</th>
                      <th>Customer Email</th>
                    </thead>
                    <tbody>
        <% } else { %>
            <tr>
                <td><%= film.title %></td>
                <td><%= moment(film.rental_date).format("dddd, MMMM Do YYYY")%></td>
                <td><%= film.full_name%></td>
                <td><%= film.email%></td>
              </tr>
        <% }})%>
      </tbody>
    </table>
</body>
  <%- include('./partials/foot.ejs') %>
</html>
