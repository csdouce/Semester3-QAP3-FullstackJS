<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <h1>Films Not Returned</h1>
    <h2 class="margin-top">Location: <%= films[0].store_address %></h2>
    <table class="pure-table pure-table-horizontal center">
      <thead>
        <th>Film Title</th>
        <th>Date Rented</th>
        <th>Customer Name</th>
        <th>Customer Email</th>
      </thead>
      <% films.forEach(film => { %>
      <tbody class="film-listing">
        <tr>
          <td><a href="films/<%= film.film_id %>"><%= film.title %></a></td>
          <td><%= moment(film.rental_date).format("dddd, MMMM Do YYYY")%></td>
          <td><%= film.full_name%></td>
          <td><%= film.email%></td>
        </tr>
        <% })%>
      </tbody>
    </table>
  </body>
  <%- include('./partials/foot.ejs') %>
</html>
