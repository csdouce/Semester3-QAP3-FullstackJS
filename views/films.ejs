<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <h2>Film Library</h2>
    <table class="pure-table pure-table-horizontal center">
      <thead>
        <th class="film-details film-title">Film Title</th>
      </thead>

      <tbody class="film-listing">
        <% if (films.length > 0)%> <% films.forEach(film => { %>
        <tr>
          <td>
            <a href="<%= film.film_id %>"> <%= film.title %></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
  <%- include('./partials/foot.ejs') %>
</html>
